<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/crema_background"
    tools:context="com.example.fokof_000.myfirstapp.MainMenuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <com.example.fokof_000.myfirstapp.util.VerdanaButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonQuiz"
            android:id="@+id/buttonQuiz"
            android:onClick="startQuizGame"/>

        <com.example.fokof_000.myfirstapp.util.VerdanaButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button1" />

        <com.example.fokof_000.myfirstapp.util.VerdanaButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button2" />

        <com.example.fokof_000.myfirstapp.util.VerdanaButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button3"
            android:onClick="startSettings"/>

        <com.example.fokof_000.myfirstapp.util.VerdanaButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonExit"
            android:id="@+id/buttonExit"
            android:onClick="exitApp" />
    </LinearLayout>

</FrameLayout>
