<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ar.org.ineco.prl.ninios.MainMenuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <ImageView
            android:src="@drawable/hablan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/appTitleHeight"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/appTitle"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/maxButtonLayoutSize"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <ar.org.ineco.prl.ninios.util.VerdanaButton
                android:id="@+id/buttonModules"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/buttonModules"
                android:onClick="startModulesActivity"/>

            <ar.org.ineco.prl.ninios.util.VerdanaButton
                android:id="@+id/buttonSettings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/buttonSettings"
                android:onClick="startLoginActivity"/>

            <ar.org.ineco.prl.ninios.util.VerdanaButton
                android:id="@+id/buttonExitApp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/buttonExit"
                android:onClick="exitApp"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
