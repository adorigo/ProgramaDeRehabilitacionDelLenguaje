<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ar.org.ineco.prl.programaderehabilitaciondellenguaje.ModulesActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/layoutModules"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ar.org.ineco.prl.programaderehabilitaciondellenguaje.util.VerdanaButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonGoBack"
            android:id="@+id/buttonGoBack"
            android:onClick="goBack"
            android:layout_marginTop="@dimen/activity_vertical_margin" />
    </LinearLayout>

</FrameLayout>
