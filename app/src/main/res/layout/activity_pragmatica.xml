<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/activity_quiz"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:paddingTop="@dimen/activity_vertical_margin"
             android:paddingBottom="@dimen/activity_vertical_margin"
             tools:context="ar.org.ineco.prl.programaderehabilitaciondellenguaje.PragmaticaActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/black_overlay">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/helpButtonHeight"
                android:id="@+id/audioAyuda"
                android:src="@android:drawable/ic_media_play"
                android:scaleType="centerInside"
                android:layout_margin="@dimen/imgMargin" />

            <ar.org.ineco.prl.programaderehabilitaciondellenguaje.util.VerdanaTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/categoriesTitle"
                android:text="@string/title_activity_pragmatica"
                android:id="@+id/textTitle"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="@dimen/helpButtonHeight"
                android:id="@+id/progressBar"
                android:layout_alignParentRight="true"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:padding="@dimen/abc_control_padding_material"
                android:layout_margin="@dimen/imgMargin"
                android:progressBackgroundTint="@color/material_blue_grey_800"
                android:progressBackgroundTintMode="multiply"
                android:indeterminateOnly="false"
                android:max="100" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/layoutQuestion"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/abc_control_padding_material"
                    android:gravity="center"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="@dimen/maxButtonLayoutSize"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/layoutOptions"
                    android:padding="@dimen/abc_control_padding_material"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layoutNextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="bottom"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>