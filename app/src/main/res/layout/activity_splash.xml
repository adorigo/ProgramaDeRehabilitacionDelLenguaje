<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/logos">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/appTitleHeight"
                android:id="@+id/favaloro"
                android:src="@drawable/favaloro"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/abc_action_bar_subtitle_bottom_margin_material"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/appTitleHeight"
                android:id="@+id/ineco"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/ineco"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_margin="@dimen/abc_action_bar_subtitle_bottom_margin_material"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/caece"
            android:src="@drawable/caece"
            android:layout_margin="@dimen/abc_action_bar_subtitle_bottom_margin_material"/>
    </LinearLayout>

</FrameLayout>